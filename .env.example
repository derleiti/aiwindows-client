# ============================================================================
# AIWINDOWS CLIENT - USER CONFIGURATION
# ============================================================================
# Copy this file to .env and configure your settings
# This file is used for local development and user preferences
# ============================================================================

# API Server (default: ailinux.me production)
API_BASE_URL=https://api.ailinux.me
API_VERSION=v1

# User Authentication (obtained after registration)
# Leave empty for first-time setup - login via UI
USER_EMAIL=
USER_TOKEN=

# Local Ollama (if installed on Windows)
OLLAMA_HOST=http://localhost:11434
OLLAMA_ENABLED=true

# Theme & Language
THEME=dark
LANGUAGE=de

# Terminal Settings (Windows)
TERMINAL_SHELL=powershell.exe
TERMINAL_FONT_SIZE=11
TERMINAL_SCROLLBACK=10000

# Window Settings
WINDOW_WIDTH=1400
WINDOW_HEIGHT=900
WINDOW_START_MAXIMIZED=false

# Update Settings
AUTO_CHECK_UPDATES=true
UPDATE_CHANNEL=stable

# Debug (for development)
DEBUG_MODE=false
LOG_LEVEL=INFO
